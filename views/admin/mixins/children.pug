mixin children(items, level = 1, parent_id)
    each item in items
        - const prefix = Array(level + 1).join("-- ");
        option(
            value=item.id
            selected = (item.id == parent_id ? true : false)
        ) #{prefix}#{item.title}
        if item.children && item.children.length > 0
            +children(item.children, level + 1, parent_id)
