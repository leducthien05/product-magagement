extends ../../layout/default.pug

block main 

    if(product.title)
        h1(class="mb-4") #{product.title}
    if(product.stock)
        div(class="mb-4") Còn lại: <b> #{product.stock} </b>
    if(product.thumbnail)
        img(
            src=product.thumbnail 
            style="width: 100px"
        )
    if(product.status)
        div(class="mb-4")
            span Trạng thái 
            if(product.status.status == "active")
                span(class="badge badge-success") Hoạt động
            else 
            span(class="badge badge-danger") Dừng hoạt động
    if(product.position)
        div(class="mb-4") Vị trí: <b> #{product.position} </b>
    if(product.description)
        div(class="mb-4") !{product.description}
    a(
        href=`${prefixAdmin}/product/edit/${product._id}`
        class="btn btn-warning btn-sm"
        id-delete = product._id
    ) Chỉnh sửa
    script(src="/admin/JS/product.js") 
    script(src="/client/JS/script.js") 