extends ../../layout/default.pug
include ../../mixins/status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/checkboxStatus.pug
include ../../mixins/alert.pug
include ../../mixins/children.pug

block main 
    h1(class="mb-4") Trang tạo mới sản phẩm
    +alert-error(5000)
    +alert-wart(5000)
    form(
        action = `${prefixAdmin}/product-category/edit/${product.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    )   
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"   
                value=product.title 
            )
        div(class="form-group")
            label(for="parent_id") Danh mục cha
            select(
                name="parent_id"
                id="parent_id"
                class="form-control"
            )
                option(value=`${product.parent_id}`)= "-- Chọn sản pẩm cha --" 
                - if(record)
                    +children(record, 1, product.parent_id)
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows = "5"
               
        )= product.description
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="text"
                class="form-control"
                id="stock"
                name="stock"
                min="0"
                value=product.stock
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src= product.thumbnail
                upload-image-preview
                class="image-preview"
            )
            span(
                class ="delete-btn d-none"
            ) ✖
            
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder = "Tự động tăng"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (product.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked = (product.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật




    script(src="/admin/JS/product.js") 
    script(src="/client/JS/script.js") 

