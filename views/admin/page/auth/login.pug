extends ../../layout/login.pug
include ../../mixins/alert.pug

block main
    +alert-error("5000")
    .container.mt-5
        .row.justify-content-center
            .col-md-6
                .card.shadow
                    .card-body
                        h3.text-center.mb-4 Đăng nhập

                        form(
                            method="POST" 
                            action=`${prefixAdmin}/auth/login`
                        )
                            .form-group
                                label(for="email") Email
                                input(
                                    id = "email"
                                    class = "form-control"
                                    type="email"
                                    name="email"
                                    placeholder="Enter email"
                                    required
                                )

                            .form-group.mt-3
                                label(for="password") Password
                                input(id = "password"
                                    class = "form-control"
                                    type="password"
                                    name="password"
                                    placeholder="Enter password"
                                    required
                                )

                                button(
                                    class = "btn btn-primary btn-block mt-4"
                                    type="submit"
                                ) Login
