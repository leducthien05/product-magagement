html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 404 Not Found
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      .error-container {
        max-width: 600px;
      }
      .error-code {
        font-size: 120px;
        font-weight: bold;
        color: #dc3545;
      }
      .error-message {
        font-size: 24px;
        margin-bottom: 30px;
      }

  body
    .container.error-container
      .error-code 404
      .error-message Oops! Trang bạn đang tìm kiếm không tồn tại.
      a.btn.btn-primary(href="/") Quay lại trang chủ
