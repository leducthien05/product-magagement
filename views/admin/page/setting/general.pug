extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    h1 Cài đặt chung

    +alert-error(5000)
    +alert-success(5000)

    form(
        action=`${prefixAdmin}/setting/general?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="websiteName") Tên website
            input(
                type="text"
                class="form-control"
                id="websiteName"
                name="websiteName"
                value =(settingGeneral ? settingGeneral.websiteName : "") 
            )

        div(
            class="form-group"
            upload-image
        )
            label(for="logo") Logo
            input(
                type="file"
                class="form-control-file"
                id="logo"
                name="logo"
            )
            img(
                src =(settingGeneral ? settingGeneral.logo : "") 
                class = "image-preview"
                upload-image-preview
            )
            

        div(
            class="form-group"
            phone-up
        )
            label(for="phone") Số điện thoại
            input(
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                value = (settingGeneral ? settingGeneral.phone : "")
            )
        
        div(
            class="form-group"
            email-up
        )
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value = (settingGeneral ? settingGeneral.email : "")
            )

        div(
            class="form-group"
            address-up
        )
            label(for="address") Địa chỉ
            input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value = (settingGeneral ? settingGeneral.address : "")
            )

        div(
            class="form-group"
            copyright-up
        )
            label(for="copyright") Bản quyền
            input(
                type="text"
                class="form-control"
                id="copyright"
                name="copyright"
                value = (settingGeneral ? settingGeneral.copyright : "")
            )

        div(
            class="form-group"
            update-up
        )
            button(
                type="submit"
                class="btn btn-primary" 
            ) Cập nhật

