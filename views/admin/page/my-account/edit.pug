extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
    h1(class="mb-4") Chỉnh sửa thông tin cá nhân
    +alert-error(5000)
    +alert-success(5000)
    if(user)
        form(
            action = `${prefixAdmin}/myaccount/edit?_method=PATCH`
            id="form-create-account"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullname") Họ tên
                input(
                    type="text"
                    class="form-control"
                    id="fullname"
                    name="fullname"
                    value=user.fullname
                )
            div(class="form-group")
                label(for="email") Email 
                input(
                    type="text"
                    class="form-control textarea-mce"
                    id="email"
                    name="email"
                    value=user.email
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=user.phone
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avartar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=user.avatar
                    upload-image-preview
                    class="image-preview"
                )
                span(
                    class ="delete-btn d-none"
                ) ✖
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
                


    script(src="/admin/JS/product.js") 
    script(src="/client/JS/script.js") 

