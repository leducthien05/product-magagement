extends ../../layouts/default.pug
include ../../mixin/box-head.pug
include ../../mixin/alert.pug

block main 
    .container.my-5
    .row.justify-content-center
        .col-8
            h1(class="text-center") Nhập mật khẩu mới
            form(
                action="/user/password/reset"
                method="POST"
            )
                div(class="form-group")
                    label(for="password") Mật khẩu mới
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    )
                div(class = "form-group")
                    label(for="password") Nhập lại mật khẩu mới
                    input(
                        type="password"
                        class="form-control"
                        id="repassword"
                        name="repassword"
                        required
                    ) 
                div(class= "form-group")
                    button(
                        type="submit"
                        class = "btn btn-primary w-100 btn-block"
                    ) Lưu mật khẩu
