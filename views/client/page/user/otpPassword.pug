extends ../../layouts/default.pug
include ../../mixin/box-head.pug
include ../../mixin/alert.pug

block main 
    .container.my-5
    .row.justify-content-center
        .col-8
            h1(class="text-center") Nhập mã OTP
            form(
                action="/user/password/otp"
                method="POST"
            )
                div(class="form-group")
                    label(for="email") Email
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value=email
                        readonly
                        required
                    )
                    
                div(class="form-group")
                    label(for="email") Mã OTP 
                    input(
                        type="number"
                        class = "form-control"
                        id="OTP"
                        name="otp"
                        required
                    )
                div(class= "form-group")
                    button(
                        type="submit"
                        class = "btn btn-primary btn-block w-100"
                    ) Xác thực
        