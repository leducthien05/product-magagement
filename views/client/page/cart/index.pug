extends ../../layouts/default.pug
include ../../mixin/box-head.pug
include ../../mixin/alert.pug

block main 
    +alert-success("3000")
    +alert-error("5000")

    .container.my-3 
        .row 
            .col-12
                +box-head("Giỏ hàng")
        .row
            .col-12
                table(class = "table table-bordered")
                    thead
                        tr
                        th STT
                        th Ảnh
                        th Tên
                        th Giá
                        th Số lượng
                        th Tổng tiền
                        th Hành động
                    tbody
                        each item, index in product.product
                            tr
                                td #{index + 1}
                                td
                                    img(src=item.productInfo.thumbnail, alt=item.slug, width="80px")
                                td 
                                    a(
                                        href=`product/detail/${item.productInfo.slug}`, target="_blank", rel="noopener noreferrer"
                                    ) #{item.productInfo.title}
                                td #{item.productInfo.priceNew}
                                td 
                                    input(
                                        type="number"
                                        name="quantity"
                                        value=item.quantity
                                        product-id = item.product_ID
                                    )
                                td #{item.totalPrice}
                                td 
                                    a(
                                        href=`/cart/delete/${item.product_ID}`
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete 
                                        id-delete = item.product_ID
                                    ) Xóa
                h3(class="text-right") Tổng đơn hàng: #{product.SumPrice}
    
    script(src="/client/JS/cart.script.js") 