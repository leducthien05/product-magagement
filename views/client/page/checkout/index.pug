extends ../../layouts/default.pug
include ../../mixin/box-head.pug
include ../../mixin/alert.pug

block main 
    +alert-success("3000")
    +alert-error("5000")

    .container.my-3 
        .row 
            .col-12
                +box-head("Giỏ hàng")
        .row
            .col-12
                table(class = "table table-bordered")
                    thead
                        tr
                        th STT
                        th Ảnh
                        th Tên
                        th Giá
                        th Số lượng
                        th Tổng tiền
                    tbody
                        each item, index in productList.product
                            tr
                                td #{index + 1}
                                td
                                    img(src=item.productInfo.thumbnail, alt=item.slug, width="80px")
                                td #{item.productInfo.title}
                                td #{item.productInfo.priceNew}
                                td #{item.quantity}
                                td #{item.totalPrice}
                                
                h3(class="text-right") Tổng đơn hàng: #{productList.SumPrice}$
        if(productList.product.length > 0)
            .row
                .col-12
                    .card.p-4.my-4
                        form(action="/checkout/order" method="POST")
                            div(class="form-group")
                                label(for="fullName") Họ tên
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    required
                                )
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    required
                                )
                            div(class="form-group")
                                label(for="address") Địa chỉ
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    required
                                )
                            div(class = "text-right mt-3")
                                button(
                                    type="submit"
                                    class="btn btn-success"
                                ) Đặt hàng
                            
        
    script(src="/client/JS/cart.script.js") 